{% extends 'VardiusAdminBundle::layout.html.twig' %}

{% block title %}
    {{ 'register.title'|trans }}
{% endblock %}

{% block wrapper %}
    <div class="row" style="color: white;">
        <div class=" col-md-offset-3 col-md-4">
            {% block flash_messages %}
                {% if app.session.flashbag.has('error') %}
                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <div class="alert alert-danger">
                            <strong>{{ 'flash.error'|trans }}</strong> {{ flashMessage|trans|raw }}
                        </div>
                    {% endfor %}
                {% endif %}

                {% if app.session.flashbag.has('notice') %}
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-info">
                            <strong>{{ 'flash.info'|trans }}</strong> {{ flashMessage|trans|raw }}
                        </div>
                    {% endfor %}
                {% endif %}

                {% if app.session.flashbag.has('success') %}
                    {% for flashMessage in app.session.flashbag.get('success') %}
                        <div class="alert alert-success">
                            <strong>{{ 'flash.success'|trans }}</strong> {{ flashMessage|trans|raw }}
                        </div>
                    {% endfor %}
                {% endif %}
            {% endblock %}
            {{ form_start(form, {'attr' : {'class' : 'form-horizontal' }}) }}
            <div class="form-group">
                <div class="col-md-9 text-center">
                    <h1>{{ 'register.title'|trans }}</h1>
                    <br/>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.user.email, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_errors(form.user.email) }}
                    <div class="input-group">
                        {{ form_widget(form.user.email, {'attr': {'class': 'form-control'}}) }}
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.user.plainPassword.first, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_errors(form.user.plainPassword.first) }}
                    <div class="input-group">
                        {{ form_widget(form.user.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        <span class="input-group-addon">
                            <i class="fa fa-lock"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.user.plainPassword.second, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_errors(form.user.plainPassword.second) }}
                    <div class="input-group">
                        {{ form_widget(form.user.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        <span class="input-group-addon">
                                <i class="fa fa-lock"></i>
                            </span>
                    </div>
                </div>
            </div>
            {% block formAdditionalFields %}
            {% endblock %}
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <a href="{{ path('account_register_terms') }}">{{ 'registration.terms'|trans }}</a>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.terms, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-offset-3 col-md-9">
                    {{ form_errors(form.terms) }}
                    <div class="input-group">
                        {{ form_widget(form.terms) }}
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group pull-right">
                    {{ form_widget(form.register, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
