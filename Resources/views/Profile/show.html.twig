{% extends 'VardiusAdminBundle::layout.html.twig' %}

{% block page_title %}
    {{ 'profile.page.show.title'|trans }}
{% endblock %}

{% block page_sub_title %}
    {{ 'profile.page.show.subtitle'|trans }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-10">
            <h1 class="">{{ user }}</h1>
            {% block profile_buttons %}
                <a href="{{ path('change_password') }}" role="button"
                   class="btn btn-primary">{{ 'change_password.form.button'|trans }}</a>
                <a href="{{ path('profile_edit') }}" role="button"
                   class="btn btn-primary">{{ 'profile.edit'|trans }}</a>
            {% endblock %}
            <br>
        </div>
        <div class="col-sm-2">
            {% block profileImage %}
            <img title="profile image" class="img-circle img-responsive pull-right"
                 src="{{ gravatar_url(user.email) }}">
            {% endblock %}
        </div>
    </div>
    <br>
    {% block profile_content %}
    {% endblock %}
{% endblock %}
