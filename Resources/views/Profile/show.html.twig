{% extends '@VardiusAdmin/layout.html.twig' %}

{% block page_title %}
    {{ 'profile.page.show.title'|trans }}
{% endblock %}

{% block page_sub_title %}
    {{ 'profile.page.show.subtitle'|trans }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-10">
            <h1 class="">{{ user }}</h1>
            {% block profile_buttons %}
                <a href="{{ path('change_password') }}" role="button"
                   class="btn btn-primary">{{ 'change_password.form.button'|trans }}</a>
                <a href="{{ path('profile_edit') }}" role="button"
                   class="btn btn-primary">{{ 'profile.edit'|trans }}</a>
            {% endblock %}
            <br>
        </div>
        <div class="col-sm-2">
            <img title="profile image" class="img-circle img-responsive pull-right"
                 src="{{ gravatar_url(user.email) }}">
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-3">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'profile.social_media'|trans }}</div>
                <div class="panel-body">
                    <i class="fa fa-facebook fa-2x"></i>
                    <i class="fa fa-github fa-2x"></i>
                    <i class="fa fa-twitter fa-2x"></i>
                    <i class="fa fa-pinterest fa-2x"></i>
                    <i class="fa fa-google-plus fa-2x"></i>
                </div>
            </div>
        </div>
        <div class="col-sm-9" contenteditable="false" style="">
            {% block profile_content %}
            {% endblock %}
        </div>
    </div>
{% endblock %}
